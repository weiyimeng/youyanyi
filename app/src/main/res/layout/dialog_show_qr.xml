<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:id="@+id/rl_root"
    >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:background="@drawable/shape_show_qr_bg"
            android:layout_margin="15dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                    <ImageView
                        android:id="@+id/tv_qrcode"
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:src="@drawable/download_qr"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scanner_qrcode_download_youyanapp"
                        android:textSize="14sp"
                        android:layout_below="@+id/tv_qrcode"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        />
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/exit_unselected"
            android:layout_marginLeft="340dp"
            />
        </RelativeLayout>



</RelativeLayout>
